
@{
    ViewData["Title"] = "Add";
}
@model ProductViewModel
<h1>Add</h1>
<div class="col-md-4">
    <form asp-controller="Products" asp-action="Add" method="post" enctype="multipart/form-data">
        <!--
        enctype="multipart/form-data bu ifade formdan resim upload etmemize yarar.

        -->
        <div class="form-group mb-3">
			<label>Name:</label>
            <input type="text" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group mb-3">
            <label>Price:</label>
            <input type="text" asp-for="Price" />
            <span class="text-danger" asp-validation-for="Price"></span>
        </div>
        <div class="form-group mb-3">
            <label>Stock:</label>
            <input type="number" asp-for="Stock" />
        </div>
        <div class="from-group mb-3">
            <select class="form-select" asp-for="CategoryId" asp-items="@ViewBag.CategorySelect">
                <option value="">Kategori seçiniz</option>
            </select>
            <span class="text-danger" asp-validation-for="CategoryId"></span>
        </div>
        <div class="form-group mb-3">
            <label for="formFİlelg" class="form-label">Ürün Resim</label>
            <input type="file" class="form-control form-control-lg" id="formFilelg" asp-for="Image" />
        </div>
        <button type="submit" class="btn btn-primary">Ekle</button>
	
    </form>
    <br />
	<a asp-controller="Products" asp-action="Back">
		<button class="btn btn-primary">Geri</button>
	</a>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}